# Production Environment Configuration
# Copy this to .env and fill in your values

# CRITICAL - Change these!
SECRET_KEY=generate-a-random-32-character-string-here
DB_PASSWORD=generate-a-strong-database-password-here

# Flask Configuration
DEBUG=False
FLASK_ENV=production
PORT=5001
HOST=0.0.0.0

# Database (Docker Compose sets this automatically)
DATABASE_URL=postgresql://receipts_user:${DB_PASSWORD}@db:5432/receipts

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_RECEIPTS_PER_UPLOAD=50

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_CACHE_ENABLED=True

# Security
BACKUP_ENABLED=True
BACKUP_RETENTION_COUNT=30

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=200 per day, 50 per hour

# Domain (for production)
DOMAIN=your-domain.com
